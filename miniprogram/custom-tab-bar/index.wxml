<!--custom-tab-bar/index.wxml-->
<cover-view class="tab-bar">
  <cover-view class="tab-bar-border"></cover-view>
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item {{selected === index ? 'tab-bar-item-active' : ''}}" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-view class="tab-bar-icon">
      <cover-image class="tab-bar-icon-img" src="{{selected === index ? item.selectedIconPath : item.iconPath}}" mode="aspectFit"></cover-image>
    </cover-view>
    <cover-view class="tab-bar-text">{{item.text}}</cover-view>
  </cover-view>
</cover-view>

