/* pages/history/index.wxss */
.container {
  padding: 0;
  background: #F5F5F5;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Segment控制器样式 */
.segment-container {
  background: #FFFFFF;
  display: flex;
  padding: 20rpx 15rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.segment-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 32rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s ease;
}

.segment-item.active {
  color: #007AFF;
  font-weight: 600;
}

.segment-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 2rpx;
}

.segment-swiper {
  flex: 1;
  height: 0;
  width: 100%;
}

swiper-item {
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 头部 */
.header {
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1rpx solid #F0F0F0;
  flex-shrink: 0;
  z-index: 10;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.header-actions {
  display: flex;
  align-items: center;
}

.clear-btn {
  font-size: 30rpx;
  color: #FF3B30;
  padding: 8rpx 16rpx;
}

.clear-btn:active {
  opacity: 0.7;
}

/* 空状态 */
.empty-state {
  flex: 1;
  height: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #CCCCCC;
}

/* 历史记录列表 */
.history-list {
  flex: 1;
  height: 0;
  padding: 20rpx 15rpx;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

.history-item {
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
}

/* 记录头部 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #F0F0F0;
  margin-bottom: 15rpx;
}

.item-header-left {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
}

.item-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-type {
  font-size: 26rpx;
  color: #007AFF;
  font-weight: 500;
}

.item-time {
  font-size: 28rpx;
  color: #999999;
}

.item-actions {
  display: flex;
  gap: 12rpx;
  flex-shrink: 0;
}

.action-btn {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  border: 1rpx solid;
  white-space: nowrap;
}

.rename-btn {
  color: #007AFF;
  border-color: #007AFF;
  background: #F0F7FF;
}

.rename-btn:active {
  background: #E0EFFF;
}

.delete-btn {
  color: #FF3B30;
  border-color: #FF3B30;
  background: #FFF0F0;
}

.delete-btn:active {
  background: #FFE0E0;
}

/* 区块 */
.item-section {
  margin-bottom: 20rpx;
}

.item-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

/* 参数列表 */
.param-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.param-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
  font-size: 28rpx;
}

.param-item:last-child {
  border-bottom: none;
}

.param-label {
  color: #666666;
  font-size: 28rpx;
}

.param-value {
  color: #333333;
  font-weight: 500;
  font-size: 28rpx;
}

/* 结果列表 */
.result-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #666666;
}

.result-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.result-value.highlight {
  color: #007AFF;
  font-weight: 600;
}

/* 模板列表样式 */
.template-list {
  flex: 1;
  height: 0;
  padding: 20rpx 15rpx;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

.template-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  background: #FFFFFF;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.template-item:active {
  background: #F5F5F5;
}

.template-item-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.template-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.template-item-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.template-item-desc {
  font-size: 26rpx;
  color: #999999;
}

.template-item-arrow {
  font-size: 40rpx;
  color: #CCCCCC;
  margin-left: 20rpx;
  flex-shrink: 0;
}

