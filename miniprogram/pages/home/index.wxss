/* Segment控制器样式 */
.segment-container {
  background: #FFFFFF;
  display: flex;
  padding: 20rpx 15rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.segment-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 32rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s ease;
}

.segment-item.active {
  color: #007AFF;
  font-weight: 600;
}

.segment-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #007AFF;
  border-radius: 2rpx;
}

.segment-content {
  min-height: calc(100vh - 100rpx);
}

/* 容器样式 */
.home-container {
  background: #f6f6f6;
  min-height: 100vh;
}

.container {
  padding: 15rpx 15rpx;
  padding-bottom: 150rpx; /* 为底部 tabbar 留出空间 */
  background: #FFFFFF;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 结果展示区域 */
.result-section {
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 12rpx 15rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  min-height: 48rpx;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 34rpx;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.result-value-wrapper {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 200rpx;
  flex: 1;
  box-sizing: border-box;
}

.result-value {
  flex: 1;
  font-size: 34rpx;
  color: #333333;
  font-weight: 400;
  text-align: right;
  padding: 0 8rpx;
  margin-right: 7rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  min-width: 0;
}

.result-value.highlight {
  color: #007AFF;
}

.result-unit {
  font-size: 34rpx;
  color: #999999;
  width: 50rpx;
  flex-shrink: 0;
  text-align: left;
  margin-left: 0;
}

/* 图表区域 */
.chart-section {
  margin-bottom: 12rpx;
}

/* 输入区域 */
.input-section {
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 12rpx 15rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  min-height: 48rpx;
}

.input-item:last-child {
  border-bottom: none;
}

.input-label {
  font-size: 34rpx;
  color: #333333;
  min-width: 200rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.toggle-group {
  display: flex;
  gap: 6rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

/* 定投和历时的选项卡居中 */
.toggle-group-center {
  flex: 0 1 auto;
  justify-content: center;
  margin-left: 20rpx;
  margin-right: 60rpx;
  min-width: 0;
}

.toggle-group-duration {
  flex: 0 1 auto;
  justify-content: center;
  margin-left: 20rpx;
  margin-right: 60rpx;
  min-width: 0;
}

/* 复利计算周期的选项卡右对齐 */
.toggle-group-right {
  flex: 1;
  justify-content: flex-end;
  margin-left: 20rpx;
  margin-right: 24rpx;
  min-width: 0;
}

.toggle-btn {
  width: 100rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #666666;
  background: #F5F5F5;
  border-radius: 6rpx;
  border: 1rpx solid #E0E0E0;
  line-height: 1.2;
  box-sizing: border-box;
  flex-shrink: 0;
}

.toggle-btn.active {
  background: #007AFF;
  color: #FFFFFF;
  border-color: #007AFF;
}

/* 历时栏的选项卡按钮宽度 */
.toggle-btn.toggle-btn-duration,
.toggle-btn.toggle-btn-duration.active {
  width: 90rpx !important;
  flex-shrink: 0 !important;
  min-width: 90rpx !important;
  max-width: 90rpx !important;
}

.input-field {
  flex: 1;
  font-size: 34rpx;
  color: #333333;
  font-weight: 400;
  text-align: right;
  padding: 0 8rpx;
  min-height: 32rpx;
  min-width: 150rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

.input-unit {
  font-size: 34rpx;
  color: #666666;
  margin-left: 8rpx;
  width: 50rpx;
  flex-shrink: 0;
}

/* 按钮区域 */
.favorite-btn-wrapper {
  margin-top: 30rpx;
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 分享按钮 */
.share-btn {
  flex: 1;
  height: 88rpx !important;
  background: #3A9FE8;
  border-radius: 15rpx;
  display: flex !important;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(58, 159, 232, 0.25);
  font-weight: 500;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1 !important;
  box-sizing: border-box !important;
  overflow: hidden;
  min-width: 0;
  flex-shrink: 1;
}

/* 模板选择按钮 */
.template-btn {
  flex: 1;
  height: 88rpx;
  background: #9B59B6;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(155, 89, 182, 0.25);
  font-weight: 500;
  box-sizing: border-box;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  overflow: hidden;
  min-width: 0;
  flex-shrink: 1;
}

.template-btn text {
  line-height: 1;
  font-size: 30rpx;
}

.template-btn:active {
  background: #8E44AD;
  transform: scale(0.98);
}

/* 收藏记录按钮 */
.favorite-btn {
  flex: 1;
  height: 88rpx;
  background: #4ABF5E;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(74, 191, 94, 0.25);
  font-weight: 500;
  box-sizing: border-box;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  overflow: hidden;
  min-width: 0;
  flex-shrink: 1;
}

.favorite-btn text {
  line-height: 1;
  font-size: 30rpx;
}

.favorite-btn:active {
  background: #3CAE3C;
}

.share-btn::after {
  border: none !important;
}

.share-btn text {
  line-height: 1;
  font-size: 32rpx;
}

.share-btn:active {
  background: #2A9BE8;
}

/* 模板选择弹窗 */
.template-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.template-modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.template-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.template-modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.template-modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999999;
  border-radius: 50%;
  background: #F5F5F5;
}

.template-modal-close:active {
  background: #E0E0E0;
}

.template-modal-body {
  flex: 1;
  overflow-y: auto;
}

.template-list {
  padding: 20rpx 0;
}

.template-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  background: #FFFFFF;
}

.template-item:active {
  background: #F5F5F5;
}

.template-item:last-child {
  border-bottom: none;
}

.template-item-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.template-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.template-item-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.template-item-desc {
  font-size: 26rpx;
  color: #999999;
}

.template-item-arrow {
  font-size: 40rpx;
  color: #CCCCCC;
  margin-left: 20rpx;
  flex-shrink: 0;
}

