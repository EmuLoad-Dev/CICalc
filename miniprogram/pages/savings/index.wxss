/* pages/savings/index.wxss */
.container {
  padding: 15rpx 15rpx;
  padding-bottom: 150rpx; /* 为底部 tabbar 留出空间 */
  background: #FFFFFF;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 结果展示区域 */
.result-section {
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 12rpx 15rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  min-height: 48rpx;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 34rpx;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.result-value-wrapper {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 200rpx;
  flex: 1;
  box-sizing: border-box;
}

.result-value {
  flex: 1;
  font-size: 34rpx;
  color: #333333;
  font-weight: 400;
  text-align: right;
  padding: 0 8rpx;
  margin-right: 7rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  min-width: 0;
}

.result-value.highlight {
  color: #007AFF;
}

.result-unit {
  font-size: 34rpx;
  color: #999999;
  width: 50rpx;
  flex-shrink: 0;
  text-align: left;
  margin-left: 0;
}

/* 输入区域 */
.input-section {
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 12rpx 15rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  min-height: 48rpx;
}

.input-item:last-child {
  border-bottom: none;
}

.input-label {
  font-size: 34rpx;
  color: #333333;
  min-width: 200rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.toggle-group {
  display: flex;
  gap: 6rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

/* 历时的选项卡居中 */
.toggle-group-center {
  flex: 0 1 auto; /* 可以收缩，但不占据多余空间 */
  justify-content: center;
  margin-left: 20rpx;
  margin-right: 60rpx; /* 左偏移40rpx (20rpx + 40rpx) */
  min-width: 0; /* 允许收缩 */
}

.toggle-group-duration {
  flex: 0 1 auto;
  justify-content: center;
  margin-left: 20rpx;
  margin-right: 60rpx;
  min-width: 0;
}

.toggle-btn {
  width: 100rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #666666;
  background: #F5F5F5;
  border-radius: 6rpx;
  border: 1rpx solid #E0E0E0;
  line-height: 1.2;
  box-sizing: border-box;
  flex-shrink: 0;
}

.toggle-btn.active {
  background: #007AFF;
  color: #FFFFFF;
  border-color: #007AFF;
}

/* 历时栏的选项卡按钮宽度 - 使用更具体的选择器确保优先级 */
.toggle-btn.toggle-btn-duration,
.toggle-btn.toggle-btn-duration.active {
  width: 90rpx !important;
  flex-shrink: 0 !important;
  min-width: 90rpx !important;
  max-width: 90rpx !important;
}

.input-field {
  flex: 1;
  font-size: 34rpx;
  color: #333333;
  font-weight: 400;
  text-align: right;
  padding: 0 8rpx;
  min-height: 32rpx;
  min-width: 150rpx; /* 确保输入框有足够的最小宽度 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

.input-unit {
  font-size: 34rpx;
  color: #666666;
  margin-left: 8rpx;
  width: 50rpx;
  flex-shrink: 0;
}

/* 图表区域 */
.chart-section {
  margin-bottom: 12rpx;
}

/* 收藏记录按钮 */
.favorite-btn-wrapper {
  margin-top: 30rpx;
  margin-bottom: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
}

.favorite-btn {
  width: 300rpx;
  height: 88rpx;
  background: #4ABF5E;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(74, 191, 94, 0.25);
  font-weight: 500;
  flex-shrink: 0;
  box-sizing: border-box;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  overflow: hidden;
}

.favorite-btn text {
  line-height: 1;
  font-size: 32rpx;
}

.favorite-btn:active {
  background: #3CAE3C;
}

/* 分享按钮 */
.share-btn {
  width: 300rpx !important;
  height: 88rpx !important;
  background: #3A9FE8;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(58, 159, 232, 0.25);
  font-weight: 500;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1 !important;
  flex-shrink: 0;
  box-sizing: border-box !important;
  overflow: hidden;
  min-width: 300rpx;
  max-width: 300rpx;
}

.share-btn::after {
  border: none !important;
}

.share-btn text {
  line-height: 1;
  font-size: 32rpx;
}

.share-btn:active {
  background: #2A9BE8;
}
