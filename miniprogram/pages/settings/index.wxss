/* pages/settings/index.wxss */

.settings-container {
  background: #f6f6f6;
  min-height: 100vh;
}

.container {
  padding: 15rpx 15rpx;
  padding-bottom: 150rpx; /* 为底部 tabbar 留出空间 */
  background: #FFFFFF;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 设置区域 */
.settings-section {
  margin-bottom: 30rpx;
}

/* 信息卡片样式 */
.info-card {
  background: #FFFFFF;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  margin-top: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
  min-width: 160rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  flex: 1;
  text-align: left;
  word-break: break-all;
  margin-top: -4rpx;
}

/* 操作项样式 */
.action-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  cursor: pointer;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background: #F5F5F5;
  margin: 0 -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.action-label {
  font-size: 30rpx;
  color: #FF3B30;
  font-weight: 500;
}

.action-arrow {
  font-size: 40rpx;
  color: #CCCCCC;
  margin-left: 20rpx;
  flex-shrink: 0;
}


