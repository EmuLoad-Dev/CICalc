/* pages/settings/index.wxss */

.settings-container {
  background: #f6f6f6;
  min-height: 100vh;
}

.container {
  padding: 15rpx 15rpx;
  padding-bottom: 150rpx; /* 为底部 tabbar 留出空间 */
  background: #FFFFFF;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  padding: 30rpx 0 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
}

/* 设置区域 */
.settings-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

/* 去广告激励区域 */
.ad-free-section {
  margin-top: 20rpx;
  margin-bottom: 12rpx;
}

.ad-free-card {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 15rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  position: relative;
  overflow: hidden;
}

.ad-free-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.ad-free-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.ad-free-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.ad-free-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1.2;
}

.ad-free-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.2;
}

.ad-free-btn {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50rpx;
  padding: 12rpx 32rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.ad-free-btn text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.ad-free-btn:active {
  background: rgba(255, 255, 255, 0.35);
  transform: scale(0.95);
}

/* 去广告状态显示（已激活） */
.ad-free-status {
  margin-top: 20rpx;
  margin-bottom: 12rpx;
}

.ad-free-status-card {
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
  border-radius: 15rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.3);
}

.ad-free-status-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.ad-free-status-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.ad-free-status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1.2;
}

.ad-free-status-time {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.2;
  font-weight: 500;
}

